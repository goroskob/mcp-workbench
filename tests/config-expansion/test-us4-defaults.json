{
  "toolboxes": {
    "test-defaults": {
      "description": "Test environment variable expansion with default values",
      "mcpServers": {
        "configurable-server": {
          "command": "npx",
          "args": [
            "-y",
            "@modelcontextprotocol/server-memory",
            "--port",
            "${PORT:-3000}",
            "--host",
            "${HOST:-localhost}"
          ],
          "env": {
            "LOG_LEVEL": "${LOG_LEVEL:-info}",
            "DEBUG_MODE": "${DEBUG_MODE:-false}",
            "MAX_CONNECTIONS": "${MAX_CONNECTIONS:-100}",
            "TIMEOUT": "${TIMEOUT:-30000}",
            "REQUIRED_API_KEY": "${API_KEY}"
          }
        }
      }
    }
  }
}
