{
  "_comment": "toolMode: 'dynamic' (default) = tools are dynamically registered with prefixed names, 'proxy' = tools accessed via workbench_use_tool",
  "toolMode": "dynamic",
  "toolboxes": {
    "filesystem": {
      "description": "Tools for file system operations",
      "mcpServers": {
        "filesystem": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
          "toolFilters": ["*"],
          "transport": "stdio"
        }
      }
    },
    "github": {
      "description": "Tools for GitHub repository management",
      "mcpServers": {
        "github": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-github"],
          "env": {
            "GITHUB_PERSONAL_ACCESS_TOKEN": "your-token-here"
          },
          "toolFilters": ["*"],
          "transport": "stdio"
        }
      }
    },
    "data-analysis": {
      "description": "Combined toolbox for data analysis with multiple sources",
      "mcpServers": {
        "postgres": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-postgres", "postgresql://localhost/mydb"],
          "toolFilters": ["*"],
          "transport": "stdio"
        },
        "sqlite": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-sqlite", "/path/to/database.db"],
          "toolFilters": ["*"],
          "transport": "stdio"
        }
      }
    }
  }
}
